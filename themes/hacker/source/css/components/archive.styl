article.archive
  padding 0
  margin 2em auto

.archive-post
  text-align left
  margin 2em auto

  .archive-title
    font-size 2.8em
    line-height 1
    position relative
    color $title
    margin 0

    a
      color black

      span
        padding-bottom 3px
        -webkit-transition box-shadow 0.15s
        transition box-shadow 0.15s
        box-shadow inset 0 -2px 0 rgba(113, 13, 183, 0)

      &:hover
        color $title

        span
          box-shadow inset 0 -2px 0 rgba(113, 13, 183, 0.4)


  time
    font-style italic

    a
      font-size 1.6rem
      color $secondary

      &:before
        content '#'
      &:hover
        color $highlight
