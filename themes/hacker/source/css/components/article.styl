article
  position relative
  padding 8rem 0

  a
    color $highlight

  &:not(:first-child):before
    content ''
    width 150px
    height 1px
    background-color: $separator
    position absolute
    top 0
    left 50%
    margin-left -75px

  blockquote
    margin 6rem 2rem
    padding-left 15px
    line-height 2rem
    border-left 4px solid $highlight

  .article-title
    position relative
    color $title
    font-size 2.4rem
    line-height 1.3
    text-align center
    margin 0
    padding 0 2rem

    a
      display block
      color $title

      span
        padding-bottom 3px
        -webkit-transition 0.15s
        transition 0.15s
        box-shadow inset 0 -2px 0 rgba($highlightRgba, 0)

      &:hover
        color $title

        span
          box-shadow inset 0 -2px 0 rgba($highlightRgba, 0.4)

  .article-top-meta
    position relative
    color $secondary
    font-size 1.3rem
    text-align center
    margin 1rem 0

    span
      margin 0 0.5rem

    a
      color $secondary
      &:hover
        color $highlight

      time
        font-style italic

  .article-excerpt, .article-content, .featured-media
    margin 4rem 0
    font-size 1.6rem
    color $bodyText

    img
      display block
      max-width: 100%
      height auto
      margin 1rem auto

  .article-footer
    .pull-left
      float left
    .pull-right
      float right

    &:after
      content " "
      display block
      clear both

    .article-meta > span:not(:last-child)
      margin-right 3rem

    .article-meta > span
      display inline-block

    .article-meta > span > span
      line-height 1
      vertical-align middle

    .article-meta
      font-size 1.3rem
      color $secondary

      a
        color $secondary
        &:hover
          color $highlight

      i
        vertical-align middle
        color $secondary
        margin-right 0.5rem

    .post-tags
      a
        &:before
          content "#"

        &:not(:last-of-type):after
          content ","
          padding-right 5px





  code
    padding 2px 4px
    margin-left 2px
    margin-right 2px
    color $codeText
    white-space normal
    border-radius 0

  p
    margin 2rem 0
    line-height 1.8


  .video-container
    position: relative;
    padding-bottom: 56.25%;
    padding-top: 0;
    height: 0;
    overflow: hidden;

    iframe
      position: absolute;
      top:0;
      left: 0;
      width: 100%;
      height: 100%;

  table
    max-width 100%
    width 100%

    caption
      padding 5px
      color $captionText
      background-color $tableBorder

    th, td
      text-align left
      padding 0.6em
      vertical-align top

    th
      vertical-align bottom
      border-bottom 1px solid $tableBorder

    tbody + tbody
      border-top 2px solid $tableBorder

    .table
      background-color $bodyBackground


    .table-bordered
      border 1px solid $tableBorder

    .table-striped tbody tr:nth-of-type(odd)
      background-color: $tableRow

    pre
      overflow-x auto
      overflow-y hidden

  figure

    figcaption
      text-align center
      font-size 1.4rem